{
  "compilerOptions": {
    "target": "ES2020", 
    "module": "commonjs", 
    "strict": true, 
    "noImplicitAny": true,  
    "outDir": "./lib", 
    "rootDir": "./src", 
    "esModuleInterop": true, 
    "skipLibCheck": true, 
    "moduleResolution": "node", 
    "baseUrl": "./", 
    "paths": {
      "*": ["node_modules/*", "src/types/*"] 
    },
    "lib": ["ES2020"], 
    "declaration": true, 
    "sourceMap": false, 
    "resolveJsonModule": true 
  },
  "include": [
    "src/**/*" 
  ],
  "exclude": [
    "node_modules", 
    "**/*.spec.ts", 
    "**/*.test.ts"
  ]
}
